<section id="{{ section.section_id }}" class="block hero-block bg-accent outer">
  <div class="inner">
    <div class="grid">
      {% if section.image | isNotEmpty %}
      <div class="cell block-preview">
        <img src="{{ section.image | relativeUrl }}" alt="{{ section.title | striptags }}" />
      </div>
      {% endif %}
      <div class="cell block-content">
        {% if section.title | isNotEmpty %}
        <h2 class="block-title underline">{{ section.title | safe}}</h2>
        {% endif %}
        <div class="block-copy">
          {{ section.content | markdownify | safe }}
        </div>
        {% if section.actions | isNotEmpty %}
        <p class="block-buttons">
          {% for action in section.actions %}
            {% set class_names = 'button white large' %}
            {% include "action-link.njk" %}
          {% endfor %}
        </p>
        {% endif %}
      </div>
    </div><!-- .grid -->
  </div><!-- .inner -->
</section><!-- .block -->