<section id="{{ section.section_id }}" class="block features-block bg-{{ section.background }} outer">
  <div class="block-header inner-small">
    {% if section.title | isNotEmpty %}
    <h2 class="block-title">{{ section.title }}</h2>
    {% endif %}
    {% if section.subtitle | isNotEmpty %}
    <p class="block-subtitle">
      {{ section.subtitle }}
    </p>
    {% endif %}
  </div><!-- .block-header -->
  {% if section.features | isNotEmpty %}
  <div class="inner">
    {% for feature in section.features %}
    <div class="block-item">
      <div class="grid">
        {% if feature.image | isNotEmpty %}
        <div class="cell block-preview">
          <img src="{{ feature.image | relativeUrl }}" alt="{{ feature.title }}" />
        </div><!-- .block-preview -->
        {% endif %}
        <div class="cell block-content">
          <h3 class="block-title underline">{{ feature.title }}</h3>
          <div class="block-copy">
            {{ feature.content | markdownify | safe }}
          </div>
          {% if feature.actions | isNotEmpty %}
            <p class="block-buttons">
              {% if feature.actions | isNotEmpty %}
                {% set actions = feature.actions %}
                {% include "cta_buttons.njk" %}
              {% endif %}
            </p>
          {% endif %}
        </div><!-- .block-content -->
      </div><!-- .grid -->
    </div><!-- .block-item -->
    {% endfor %}
    </div><!-- .inner -->
  {% endif %}
</section><!-- .block -->