<section id="{{ section.section_id }}" class="block text-block bg-{{ section.background }} outer">
  <div class="inner">
    <div class="grid">
      {% if section.image | isNotEmpty %}
      <div class="cell block-preview">
        <img src="{{ section.image | relativeUrl }}" alt="{{ section.title }}" />
      </div><!-- .block-preview -->
      {% endif %}
      <div class="cell block-content">
        {% if section.title | isNotEmpty %}
        <h2 class="block-title underline">{{ section.title }}</h2>
        {% endif %}
        <div class="block-copy">
          {{ section.content | markdownify | safe }}
        </div>
        {% if section.actions | isNotEmpty %}
          {% set actions = section.actions %}
          {% include "cta_buttons.njk" %}
        {% endif %}
      </div><!-- .block-content -->
    </div><!-- .grid -->
  </div><!-- .inner -->
</section><!-- .block -->
