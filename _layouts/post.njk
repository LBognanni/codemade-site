---
layout: body
---

<div class="outer">
  <div class="inner-medium">

    <article class="post post-full">
      <header class="post-header">
        <h1 class="post-title">{{ title }}</h1>
      </header><!-- .post-header -->
      {% if image | isNotEmpty %}
      <div class="post-thumbnail">
        <img src="{{ image | relativeUrl }}" alt="{{ title }}" />
      </div><!-- .post-thumbnail -->
      {% endif %}
      {% if subtitle | isNotEmpty %}
      <div class="post-subtitle">
        {{ subtitle }}
      </div><!-- .post-subtitle -->
      {% endif %}
      <div class="post-content">
        {{ content | safe }}
      </div><!-- .post-content -->
      
      {% set post = page %}
      {% set date_type = 'long' %}
      {% include "blog_post_footer.njk" %}
    </article><!-- .post -->

  </div><!-- .inner-medium -->
</div><!-- .outer-->